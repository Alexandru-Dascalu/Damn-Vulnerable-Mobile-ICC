<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.swansea.dascalu.dvmicc.whatsapp">
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DamnVulnerableMobileICC">
        
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DeleteActivity"/>

        <service android:name=".icc.DeleteMessagesService"
            android:enabled="true"
            android:exported="false">

            <intent-filter>
                <action android:name="uk.ac.swansea.dascalu.dvmicc.whatsapp.intent.action.DELETE" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.APP_CONTACTS"/>
                <data android:mimeType="text/plain"
                    android:scheme="content"
                    android:host="uk.ac.swansea.dascalu.dvmicc.whatsapp.provider"/>
            </intent-filter>
        </service>
        
        <provider
            android:authorities="uk.ac.swansea.dascalu.dvmicc.whatsapp.provider"
            android:name=".icc.MessagesProvider"
            android:grantUriPermissions="true"
            android:enabled="true"
            android:exported="false"
            android:label="Whatsapp messages content provider"/>
    </application>

</manifest>
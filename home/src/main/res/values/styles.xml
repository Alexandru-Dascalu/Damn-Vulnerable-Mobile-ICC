<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/lightBlue</item>
        <item name="colorPrimaryVariant">@color/lightBlueLight</item>
        <item name="colorPrimaryDark">@color/lightBlueDark</item>
        <item name="colorSecondary">@color/lime</item>
        <item name="colorSecondaryVariant">@color/limeDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="titleStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
    </style>

    <style name="headerStyle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="textStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="manifestFragmentAppNameStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="questionStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif-medium</item>
    </style>
    
    <style name="questionsTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">?attr/colorSecondary</item>
    </style>
</resources>
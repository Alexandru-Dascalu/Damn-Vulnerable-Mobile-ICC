<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uk.ac.swansea.dascalu.dvmicc.moneymanager">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DamnVulnerableMobileICC">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CategoriesActivity"/>
        <activity android:name=".LogActivity"/>

        <activity android:name=".LogInActivity">
            <intent-filter>
                <action android:name="uk.ac.swansea.dascalu.dvmicc.santander.intent.action.LOGIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.HOME"/>
                <data android:mimeType="text/plain"
                    android:scheme="santander_pay"
                    android:host="uk.ac.swansea.dascalu.dvmicc.santander"/>
            </intent-filter>
        </activity>

    </application>
</manifest>